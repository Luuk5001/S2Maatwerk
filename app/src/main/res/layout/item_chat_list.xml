<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewChatListImage"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <LinearLayout
        android:id="@+id/linearLayoutChatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewChatListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Chat name.." />

        <TextView
            android:id="@+id/textViewChatListMyGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="My group name.." />

        <TextView
            android:id="@+id/textViewChatListOtherGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Other group names..." />
    </LinearLayout>
</LinearLayout>